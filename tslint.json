{
	"extends": "tslint-config-airbnb",
	"linterOptions": {
		"exclude": [
			"node_modules/**/*.*"
		]
  },
  "rules": {
		"max-line-length": [
			true,
			140
		],
		"no-else-after-return": [false],
    "no-increment-decrement": [false],
    "object-curly-spacing": [false],
    "ter-indent": [false]
	}
}